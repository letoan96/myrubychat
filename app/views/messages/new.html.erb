<center>
	<h1> Create New Message </h1>
</center>

<% if @message.errors.size > 0 %>
<div class="alert alert-danger">
<%= @message.errors.full_messages.to_sentence %>
</div>
<% end %>
<div class="card" >
	<div class="card-block" >

		<div class="form-inline">	
			<b style='margin-right: 20px;'> To: </b>
			<% if @name %>
			<b class="text-primary"><%= @name.to_sentence %></b>
			<% end %>
		</div>


		<%= form_for @message do |f| %>

		<div class="dropdown">
				<a class="btn btn-secondary dropdown-toggle" href="https://example.com" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Add recipient
				</a>
				<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
					<% @a.each do |friend| %>
					<%= link_to friend.name, new_message_path(:recipient_id => friend.id), class: "dropdown-item" %>
					<% end %>
				</div>
			</div>

		<div class="form-group">
			<%= f.label :subject  %>
			<%= f.text_field :subject, class: 'form-control'  %>
		</div>
		<div class="form-group">
			<%= f.label :body  %>
			<%= f.text_field :body, class: 'form-control', :size => '100x100'  %>
		</div>

		<div class="form-group">
			<%= f.submit 'Send', class: 'btn btn-primary'  %>
		</div>
		<% end %>

	</div>
</div>
